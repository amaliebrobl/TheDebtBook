<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheDebtBook.Pages.RegisteredList"
             Title="RegisteredList">
    <VerticalStackLayout>
        <Grid ColumnDefinitions="*,*"
              RowDefinitions="*,*,*,*"
              RowSpacing="2"
              ColumnSpacing="2">
        </Grid>
        <ListView ItemsSource="{Binding Debtors }"
                  Grid.Row="0"
                  Grid.Column="0"
                  Grid.RowSpan="3">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Value }"
                              Detail="{Binding Date}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Close"
                Grid.Row="3"
                Grid.Column="0"></Button>
        <Entry Text="Value"
               Grid.Row="0"
               Grid.Column="1"></Entry>
        <Button Text="Add Value"
                Grid.Row="1"
                Grid.Column="1"></Button>



    </VerticalStackLayout>

</ContentPage>